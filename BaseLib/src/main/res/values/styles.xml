<resources>



    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/text_color_dark</item>
        <item name="android:textColorHint">@color/text_color_hint</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="switchStyle">@style/SwitchStyle</item>
        <item name="android:textAllCaps">false</item>
        <item name="buttonStyle">@style/buttonStyle</item>
        <item name="actionMenuTextAppearance">@style/MyMenuTextAppearance</item>
        <!-- 所有单选项的选择按钮设置 -->
        <item name="android:listChoiceIndicatorSingle">@drawable/radio_button_selector</item>
        <!-- 统一Dialog的风格 -->
        <item name="alertDialogTheme">@style/alertDialogTheme</item>
        <item name="listPreferredItemPaddingRight">@dimen/activity_horizontal_margin</item>
        <item name="listPreferredItemPaddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:spinnerItemStyle">@style/spinnerItemStyle</item>
        <item name="android:listPreferredItemPaddingStart">@dimen/content_dimen_xmedium</item>
        <item name="android:listPreferredItemPaddingEnd">@dimen/content_dimen_xmedium</item>
        <item name="searchMsgIcon">@drawable/ic_search</item>
        <item name="searchBackIcon">@drawable/ic_arrow_back</item>
    </style>

    <style name="BaseTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BaseTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="BaseTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="actionBarStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="textAllCaps">false</item>
    </style>

    <!-- 对tab layout 设置文字相关属性  -->
    <style name="TabLayoutTextAppearance" parent="TextAppearance.AppCompat">
        <!-- 英文文字不自动转换大写 -->
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- 对Home tab layout 设置文字相关属性  -->
    <style name="HomeTabLayoutTextAppearance" parent="TabLayoutTextAppearance">
        <!-- 文字大小为正常大小 -->
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="MyMenuTextAppearance" parent="android:TextAppearance.Holo.Widget.ActionBar.Menu">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="track">@drawable/switch_track</item>
        <item name="android:thumb">@drawable/switch_thumb</item>
    </style>

    <style name="buttonStyle">
        <item name="android:background">@drawable/bg_button_selector</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Dialog的风格设置 -->
    <style name="alertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:colorActivatedHighlight">@color/colorPrimary</item>
    </style>

    <style name="spinnerItemStyle">
        <item name="android:padding">@dimen/content_dimen_medium</item>
    </style>

    <style name="MSV_ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/content_dimen_normal</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

</resources>
